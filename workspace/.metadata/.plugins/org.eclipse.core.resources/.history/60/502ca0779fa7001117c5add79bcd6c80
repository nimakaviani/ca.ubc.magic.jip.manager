package views.widgets;

import java.io.File;

import org.eclipse.jface.viewers.LabelProvider;

import com.jchapman.jipsnapman.models.Snapshot;

public class 
SnapshotsLabelProvider 
extends LabelProvider 
{
	@Override
	public String
	getText
	( Object element )
	{
		Snapshot snapshot 
		 	= (Snapshot) element;
		
		File file = new File(snapshot.getPath());
		
		return snapshot.getPath();
		//return file.getName() + "(" + snapshot.getHost() + ":" + snapshot.getPort() + ")";
	}
}
