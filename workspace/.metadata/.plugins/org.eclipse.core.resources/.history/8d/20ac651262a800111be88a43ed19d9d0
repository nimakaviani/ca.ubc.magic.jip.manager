package models;

import java.beans.PropertyChangeListener;
import java.util.LinkedList;
import java.util.List;

import controllers.ControllerDelegate;
import controllers.IController;

public class 
EventLogListModel
implements IModel
{
	IController controller 
		= new ControllerDelegate();
	PropertyChangeDelegate property_change_delegate
		= new PropertyChangeDelegate();
	
	private List<Object> event_log_list
		= new LinkedList<Object>();
	
	public 
	EventLogListModel()
	{
		this.controller.addModel(this);
	}
	
	@Override
	public IController 
	getController() 
	{
		return this.controller;
	}

	@Override
	public void
	addPropertyChangeListener
	( PropertyChangeListener l) 
	{
		this.property_change_delegate.
			addPropertyChangeListener(l);
	}

	@Override
	public void 
	removePropertyChangeListener
	( PropertyChangeListener l)
	{
		this.property_change_delegate.
			removePropertyChangeListener(l);
	}
}
