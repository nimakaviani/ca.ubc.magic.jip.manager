# $Id: yaslslf4jlogging.properties,v 1.1 2006/04/19 18:11:18 jchapman0 Exp $
# sample properties file for initializing the yasl slf4j logging mechanism

# All properties can also be set from the command line. For example:
# java -Dlogging.level=info ...

# logging.level
# sets the initial level for loggers
# values: error, warn, info, debug
# default value: error
logging.level=error

# use.single.logger
# controls if the logger factory uses a single logger instance for the 
# application or a separate logger instance for each class requesting a logger
# values: true, false
# default value: false
use.single.logger=false

# logging.target
# Defines the place where log messages will be recorded.
# values: logmanager, file, console
# default value: console
logging.target=console

# use.logging.file
# If set to false, a logfile using the logging.file name will not be created. Messages
# will only be logged to the log manager or console.
# values: true, false
# default value: true
use.logging.file=true

# logging.file
# Name of file to which messages will be logged when logging.target is set to file.
# '.log' will be appended to the file name when it is created.
# default value: logfile
logging.file=

# logging.file.append
# Controls if log messages should be appended to the existing log file. If set to false
# and a log file already exists, a new log file with an integer appended to its name
# will be used.
# values: true, false
# default value: true
logging.file.append=true

# logging.file.append.date
# If set to true, appends the date to the file name, using MM-DD-YYYY.
# values: true, false
# default value: false
logging.file.append.date=false
