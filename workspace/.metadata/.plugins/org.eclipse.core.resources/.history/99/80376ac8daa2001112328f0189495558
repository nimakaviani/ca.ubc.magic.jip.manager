package actions;

import jipplugin.Activator;
import jipplugin.JIPView;

import org.eclipse.jface.action.Action;
import org.eclipse.jface.dialogs.MessageDialog;
import org.eclipse.swt.widgets.Shell;

public class DetailsAction 
extends Action 
{
	Shell 	shell;
	JIPView view;
	
	public 
	DetailsAction
	(JIPView view)
	{
		this.shell = new Shell();
		this.view = view;
		this.setToolTipText("Set the path, name, port, and host to work with.");
		this.setImageDescriptor(Activator.getImageDescriptor("icons/add_att";
	}
	
	@Override
	public void run(){
		MessageDialog.openInformation( this.shell, "First plug-in", "Hello, world!" );
		view.setSnapshotDetails("hello", "there", "you", "there");
	}
}
