package com.jchapman.jipsnapman.events;

import java.awt.event.ActionEvent;
import java.util.Hashtable;

@SuppressWarnings("serial")
public class
EventLogEvent 
extends ActionEvent
{
	Hashtable<String, String> properties;
	
	public static int ACTION_PERFORMED = 1;

    public 
    EventLogEvent
    (Object source, int id, String command) 
    {
    	super(source, id, command);
        this.properties 
        	= new Hashtable<String, String>();
    }

    public void 
    addProperty
    ( String key, String message )
    {
       this.properties.put(key, message);
    }
    
    public String
    getProperty
    ( String key )
    {
    	// if the map is of size 1 output
    	// that property, otherwise grab the data and format it
    	// based on the passed in argument
    	
    	if(this.properties.size() == 1){
    		return this.properties.values().toArray()[0];
    	}
    	return null;
    }
}
